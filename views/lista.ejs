<%- include('header') -%> 

    <!-- Título da lista de tarefas -->
    <div class="box" id="heading">
      <h1><%= tituloLista %> </h1>
    </div>
    <!-- Fim do Título da lista de tarefas -->

    <!-- Lista de tarefas -->
    <div class="box">
      <% minhasTarefas.forEach(tarefa => { %>
        <form action="/remover" method="post">
            <div class="item">
              <input type="checkbox" name="checkbox" value="<%= tarefa._id %>" onChange="this.form.submit()">
              <p><%= tarefa.nome %></p>
            </div>
            <input type="hidden" name="listaNome" value="<%= tituloLista %>"></input>
        </form>
      <% }) %>

      <!-- Campo para inserir nova tarefa -->
      <form action="/" method="post">
        <input type="text" name="tarefa" placeholder="Nova tarefa" autocomplete="off">
        <button type="submit" name="lista" value=<%= tituloLista %>>+</button>
      </form>
      <!-- Fim do Campo para inserir nova tarefa -->

    </div>
    <!-- Fim da Lista de tarefas -->
    
<%- include('footer') -%> 